<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- כותרת -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="הוספת סרטונים"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/assistantbold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <!-- רשימת הסרטונים -->
        <ListView
            android:id="@+id/lv_videos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF" />

        <!-- כותרת הוספת סרטון -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="\nהוסף סרטון"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/assistantextrabold" />

        <!-- שדה להזנת כותרת הסרטון -->
        <EditText
            android:id="@+id/et_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="כותרת הסרטון"
            android:padding="10dp"
            android:fontFamily="@font/assistantbold"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0" />

        <!-- שדה להזנת כתובת הסרטון -->
        <EditText
            android:id="@+id/et_video_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="קישור לסרטון"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/assistantbold"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0" />

        <!-- ספינר לבחירת נושא הסרטון -->
        <Spinner
            android:id="@+id/spinner_video_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <!-- כפתור הוספת הסרטון -->
        <Button
            android:id="@+id/btn_add_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="הוסף סרטון"
            android:backgroundTint="#A921F3"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/assistantbold" />

    </LinearLayout>
</ScrollView>
