<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הירשם לMDAI"
        android:textSize="38dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/assistantbold"
        android:layout_marginBottom="30dp" />

    <!-- שדה חדש להזנת שם המשתמש -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="User name"
        android:textColor="@color/white"
        android:textColorHint="#AFACAC"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/assistantbold"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_new_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="#AFACAC"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/assistantbold"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#AFACAC"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/assistantbold"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#AFACAC"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/assistantbold"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_register_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הירשם"
        android:textColor="#FFFFFF"
        android:backgroundTint="#46A7F0"
        android:fontFamily="@font/assistantbold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:padding="10dp" />
</LinearLayout>
