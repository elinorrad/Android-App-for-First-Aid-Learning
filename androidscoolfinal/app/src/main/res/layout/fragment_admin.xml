<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <!-- כותרת -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ברוך הבא, מנהל!"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/assistantextrabold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="מה תרצה לעשות היום?"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/assistantbold" />

    <!-- כפתור הוסף\ערוך שאלות -->
    <Button
        android:id="@+id/btn_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="הוסף/ערוך שאלות"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/assistantbold" />

    <!-- כפתור הוסף\ערוך מושגים -->
    <Button
        android:id="@+id/btn_concepts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="הוסף/ערוך מושגים"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/assistantbold" />

    <!-- כפתור הוסף\ערוך סיכומים -->
    <Button
        android:id="@+id/btn_summaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="הוסף/ערוך סיכומים"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/assistantbold" />

    <Button
        android:id="@+id/btn_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="הוסף/ערוך סרטונים"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/assistantbold" />

</LinearLayout>
